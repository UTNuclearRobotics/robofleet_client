cmake_minimum_required(VERSION 3.0.2)
project({msg_package}_robofleet)

find_package(catkin COMPONENTS
  robofleet_client
  {msg_package}
  REQUIRED
)

catkin_package(
  INCLUDE_DIRS include
  LIBRARIES {msg_package}_robofleet
  CATKIN_DEPENDS robofleet_client {msg_package}
)

set(PLUGIN_SRC
{sources_list})

add_library({msg_package}_robofleet ${{PLUGIN_SRC}})
target_link_libraries({msg_package}_robofleet ${{catkin_LIBRARIES}})
target_include_directories({msg_package}_robofleet PRIVATE
  include
  ${{catkin_INCLUDE_DIRS}}
)
